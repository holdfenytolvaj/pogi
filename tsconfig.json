{
  "compilerOptions": {
    "removeComments": true,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "./lib",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ]
  },
  "files": [
    "src/index.ts",
    "src/bin/generateInterface.ts"
  ],
  "include": [
    "src/*.test.ts",
    "src/index.d.ts"
  ]
}